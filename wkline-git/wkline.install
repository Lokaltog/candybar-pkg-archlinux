post_install() {
	echo "
Please copy the default configuration from '/usr/share/wkline/config.def.json' to
'~/.config/wkline/config.json' before running wkline.

Add 'wkline &' to your xinitrc to enable wkline on startup.
"
}

post_upgrade() {
	echo "
Please copy the default configuration from '/usr/share/wkline/config.def.json' to
'~/.config/wkline/config.json' before running wkline.
"
}
